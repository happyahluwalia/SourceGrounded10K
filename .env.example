# Finance Agent - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED - Application will not start without these
# ============================================================================

# Database Connection
DATABASE_URL=postgresql://postgres:your-secure-password@localhost:5432/financeagent

# For Docker Compose (separate variables)
POSTGRES_DB=financeagent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# SEC API Compliance (REQUIRED by SEC.gov)
# Use your email address - SEC requires this for API access
SEC_USER_AGENT=your-email@example.com

# ============================================================================
# SECURITY - Important for production
# ============================================================================

# Debug Mode (MUST be False in production)
DEBUG=False

# CORS Origins (comma-separated list of allowed origins)
# Development: CORS_ORIGINS=*
# Production: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=*

# API Key (optional, for authentication)
# Generate with: openssl rand -base64 32
API_KEY=

# Debug Log Streaming (set to False to disable UI logs in production)
ENABLE_DEBUG_LOGS=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# ============================================================================
# OPTIONAL - Have sensible defaults
# ============================================================================

# Application Settings
LOG_LEVEL=INFO

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=financial_filings

# LLM Service (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:1b

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_DIMENSION=1024

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Frontend API URL (for Docker builds)
VITE_API_URL=http://localhost:8000

# ============================================================================
# PRODUCTION ONLY
# ============================================================================

# Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# ============================================================================
# NOTES
# ============================================================================
# 
# 1. Never commit .env file to git
# 2. Use strong passwords in production (32+ characters)
# 3. Change all default passwords
# 4. Set DEBUG=False in production
# 5. Restrict CORS_ORIGINS to your actual domain(s)
# 6. Generate a strong random API_KEY
# 7. Keep this file updated when adding new variables
